@{
    ViewBag.Title = "ViewAllBrand";
    Layout = "~/Views/Shared/_Admin_Header.cshtml";
}


@using project.Models

<body>
    <div class="ch-container">
        <div class="row">

            <div id="content" class="col-lg-10 col-sm-10">
                <!-- content starts -->
                <div>
                    <ul class="breadcrumb">
                        <li>
                            <a href="/Admin/Dashboard">Home</a>
                        </li>
                        <li>
                            <a href="/Admin/ViewAllBrand">Brands</a>
                        </li>
                    </ul>
                </div>
                <div class="row">
                    <div class="box col-md-12">
                        <div class="box-inner">
                            <div class="box-header well" data-original-title="">
                                <h2><i class="glyphicon glyphicon-user"></i>Brands</h2>

                            </div>

                            <div class="box-content">
                                <form method="post" action="/Admin/SearchBrand">
                                    <div class="form-group">
                                        <label>Search</label>
                                        <input type="text" name="search" class="form-control" placeholder="Title" required>
                                    </div>

                                    <button type="submit" class="btn btn-default">Search</button>
                                </form>
                            </div>
                           
                            <div class="box-content">
                                <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Name</th>
                                            <th>Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>



                                        @foreach (Brand b in Model)
                                        {
                                            <tr>
                                                <td>@b.Id</td>
                                                <td>@b.name</td>


                                                <td class="center">

                                                    

                                                    <i class="glyphicon glyphicon-edit icon-white btn btn-info">
                                                        @Html.ActionLink("Edit", "EditBrand" , b)
                                                    </i>
                                                    <i class="glyphicon glyphicon-trash icon-white btn btn-danger">
                                                        @Html.ActionLink("Delete", "DeleteBrand" ,b)
                                                    </i>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div><!--/row-->
                <!-- content ends -->
            </div><!--/#content.col-md-0-->
        </div><!--/fluid-row-->

    </div><!--/.fluid-container-->
</body>





