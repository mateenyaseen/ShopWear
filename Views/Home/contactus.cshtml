@{
    ViewBag.Title = "contactus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model project.Models.Contactu
 @using project.Models
@{     User user = (User)HttpContext.Current.Session["user"]; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Bootstrap E-commerce Templates</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <!--[if ie]><meta content='IE=8' http-equiv='X-UA-Compatible'/><![endif]-->
    <!-- bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrappage.css" rel="stylesheet" />


    <!-- global styles -->
    <link href="~/Content/flexslider.css" rel="stylesheet" />
    <link href="~/Content/themes/jquery.fancybox.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />


    <!-- scripts -->
    <script src="~/Content/jquery-1.7.2.min.js"></script>
    <script src="~/Content/bootstrap.min.js"></script>

    <script src="~/Content/superfish.js"></script>
    <script src="~/Content/jquery.scrolltotop.js"></script>
    <script src="~/Content/themes/jquery.fancybox.js"></script>

    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <script src="js/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    
    <div id="wrapper" class="container">
       
        <section class="google_map">
            <iframe width="100%" height="300" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=74%2F6+Nguy%E1%BB%85n+V%C4%83n+Tho%E1%BA%A1i,+S%C6%A1n+Tr%C3%A0,+%C4%90%C3%A0+N%E1%BA%B5ng,+Vi%E1%BB%87t+Nam&amp;aq=0&amp;oq=74%2F6+Nguyen+Van+Thoai+Da+Nang,+Viet+Nam&amp;sll=37.0625,-95.677068&amp;sspn=41.546728,79.013672&amp;ie=UTF8&amp;hq=&amp;hnear=74+Nguy%E1%BB%85n+V%C4%83n+Tho%E1%BA%A1i,+Ng%C5%A9+H%C3%A0nh+S%C6%A1n,+Da+Nang,+Vietnam&amp;t=m&amp;ll=16.064537,108.24151&amp;spn=0.032992,0.039396&amp;z=14&amp;iwloc=A&amp;output=embed"></iframe>
        </section>
        <section class="header_text sub">
             
            <h4><span>Contact Us</span></h4>
        </section>
        <section class="main-content">
            <div class="row">
                <div class="span5">
                    <div>
                        <h5>ADDITIONAL INFORMATION</h5>
                        <p>
                            <strong>Phone:</strong>&nbsp;(123) 456-7890<br>
                            <strong>Fax:</strong>&nbsp;+04 (123) 456-7890<br>
                            <strong>Email:</strong>&nbsp;<a href="#">mateen.yaseen@ymail.com</a>
                        </p>
                        <br />
                        <h5>SECONDARY OFFICE  </h5>
                        <p>
                            <strong>Phone:</strong>&nbsp;(113) 023-1125<br>
                            <strong>Fax:</strong>&nbsp;+04 (113) 023-1145<br>
                            <strong>Email:</strong>&nbsp;<a href="#">mateen.yaseen@ymail.com</a>
                        </p>
                    </div>
                </div>
                <div class="span7">
                    <h2>Mail us</h2>
                    @using (Html.BeginForm("contactustodb", "Home", FormMethod.Post))
                    { 
                    @Html.ValidationSummary(true)

                        <fieldset>
                            <div class="clearfix">
                                <label for="name"><span>Name:</span></label>
                                <div class="input">
                                    @Html.TextBoxFor(x => x.name, new { tabindex = "1", size = "18", @class = "input-xlarge"  ,placeholder="Name"})
                                    @Html.ValidationMessageFor(x => x.name)
                                </div>
                            </div>

                            <div class="clearfix">
                                <label for="email"><span>Email:</span></label>
                                <div class="input">
                                    @Html.TextBoxFor(x => x.email, new { tabindex = "2", size = "25", @class = "input-xlarge", placeholder = "Email Address"  })
                                     @Html.ValidationMessageFor(x => x.email)
                                     
                                </div>
                            </div>

                            <div class="clearfix">
                                <label for="message"><span>Message:</span></label>
                                <div class="input">

                                    @Html.TextAreaFor(x => x.Message, new {   tabindex = "3", rows = "7", size = "25", @class = "input-xlarge", placeholder = "Message" })
                                    @Html.ValidationMessageFor(x => x.Message)
                                </div>
                            </div>

                            <div class="actions">
                                <button tabindex="3" type="submit" class="btn btn-inverse">Send message</button>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </section>
       
            <section id="footer-bar">
                <div class="row">
                    <div class="span3">
                        <h4>Navigation</h4>
                        <ul class="nav">
                            <li><a href="/Home/index">Homepage</a></li>
                            <li><a href="/Home/contactus">Contac Us</a></li>

                            @if (user != null)
                            {
                                <li><a href="/Items/my_cart">Your Cart</a></li>
                            }
                            <li><a href="/Home/Register">Login</a></li>
                        </ul>
                    </div>

                    <div class="span5">
                        <p class="logo" style=" font-size:35px; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color:orange">Shop  Wear</p>
                        <p>Fashion is a popular style or practice, especially in clothing, footwear, accessories, makeup, body piercing, or furniture.</p>
                        <br />
                        <span class="social_icons">
                            <a class="facebook" href="#">Facebook</a>
                            <a class="twitter" href="#">Twitter</a>
                            <a class="skype" href="#">Skype</a>
                            <a class="vimeo" href="#">Vimeo</a>
                        </span>
                    </div>
                </div>
            </section>
         
        <section id="copyright">
            <span>Copyright 2013 Mateen yaseen.</span>
        </section>
    </div>

    <script src="~/Content/common.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

</body>
</html>